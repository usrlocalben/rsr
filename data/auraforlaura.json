[
	{"$truecolor": { "id": "root",
		"sRGB": true,
		"program": "Default",
		"gpu": {"$gpu": {
			"targetSize": "globals:windowSize",
			"layers": ["lAmy", "lEffects"]
		}}}},

	{"$layer": { "id": "lAmy",
		"camera": {"$orthographic": {"l": 0, "r": 16.0, "b": 0, "t": 9.0}},
		"color": "amyBackgroundColor",
		"gl": [ "nAmy" ]}},

	{"$computedVec3": {
		"id": "amyBackgroundColor",
		"code": "{pow(238/255.0, 2.2333), pow(248/255.0, 2.2333), 1.0}"}},

	{"$layer": { "id": "lEffects",
		"camera": {"$perspective": {
			"position": {"$vec3": {"x": 0, "y": 0, "z": 24}},
			"h": 3.14, "v": 0,
			"fov": 55.0,
			"originX": -0.425}},
		"gl": [ "nAuraForLaura" ]}},

	{"$perspective": { "id": "nCam",
		"position": {"$vec3": {"x": 2, "y": 0, "z": 4}},
		"h": 3.14, "v": 0,
		"fov": 55.0}},

	{"$translate": {"id": "nAmy",
		"translate": {"$vec3": {"x": 12.5, "y": 4.5, "z": 0.999}},
		"gl": {"$translate": {
			"scale": {"$vec3": {"x": 9.0, "y": 9.0, "z": 1.0}},
			"gl": {"$plane": {"material": "mAmy"}}}}}},

	{"$material": {"id": "mWire", "program": "Wireframe"}},

	{"$material": { "id": "mPurpleEnvmap",
		"program": "Envmap",
		"filter": false,
		"texture0": {"$image": {"id": "texpurple1", "file": "data/texture/env-purple.png"}}}},

	{"$material": { "id": "mAmy",
		"program": "Amy",
		"filter": true,
		"texture0": {"$image": {"file": "data/texture/amy1024.png"}}}},

	{"$computedVec3": {"id": "auraFreq",
		"inputs": [{"name": "t", "type": "real", "source": "globals:wallclock"}],
		"code": "{(pow(sin(t*0.5),7))*10+15.0, sin(t*0.25)*15+10, 0}"}},

	{"$computedVec3": {"id": "auraPhase",
		"inputs": [{"name": "t", "type": "real", "source": "globals:wallclock"}],
		"code": "{t*1, t*5.0, 0}"}},

	{"$float": {"id": "auraPositionNoiseAmt", "x": 0}},

	{"$float": {"id": "auraAmp", "x": 0.05}},

	{"$computedVec3": { "id": "auraRotation",
		"inputs": [{"name": "t", "type": "real", "source": "globals:wallclock"}],
		"code": "{0, sin(t*0.5)*0.2+0.2, sin(t*0.222)*0.1}"}},

	{"$fxAuraForLaura": {"id": "aura1of4", "hunk": 0,
		"material": "mPurpleEnvmap", "freq": "auraFreq", "phase": "auraPhase", "amp": "auraAmp", "divs": 6}},
	{"$fxAuraForLaura": {"id": "aura2of4", "hunk": 1,
		"material": "mPurpleEnvmap", "freq": "auraFreq", "phase": "auraPhase", "amp": "auraAmp", "divs": 6}},
	{"$fxAuraForLaura": {"id": "aura3of4", "hunk": 2,
		"material": "mPurpleEnvmap", "freq": "auraFreq", "phase": "auraPhase", "amp": "auraAmp", "divs": 6}},
	{"$fxAuraForLaura": {"id": "aura4of4", "hunk": 3,
		"material": "mPurpleEnvmap", "freq": "auraFreq", "phase": "auraPhase", "amp": "auraAmp", "divs": 6}},

	{"$translate": { "id":"nAuraForLaura",
		"gl": {"$group": {
			"gl": ["aura1of4", "aura2of4", "aura3of4", "aura4of4"
			]}},
		"translate": {"$computedVec3": {
			"inputs": [
				{"name": "amp", "type": "real", "source": "auraPositionNoiseAmt"},
				{"name": "nx", "type": "real", "source": "auraPositionNoiseX"},
				{"name": "ny", "type": "real", "source": "auraPositionNoiseY"},
				{"name": "nz", "type": "real", "source": "auraPositionNoiseZ"} ],
			"code": "{nx*amp, ny*amp, nz*amp}"}},
		"scale": {"$float": {"x": 9.0}},
		"rotate": "auraRotation"}},

	{"$noise": {"id": "auraPositionNoiseX", "coord": {"$vec3": {
		"x": 0,
		"y": "globals:wallclock",
		"z": 0}}}},

	{"$noise": {"id": "auraPositionNoiseY", "coord": {"$vec3": {
		"x": 0.2348792,
		"y": "globals:wallclock",
		"z": 0}}}},

	{"$noise": {"id": "auraPositionNoiseZ", "coord": {"$vec3": {
		"x": 0.4718937,
		"y": "globals:wallclock",
		"z": 0}}}},

	{"$vec3": {"id": "norotator", "x": 0, "y": 0, "z": 0}},
	{"$computedVec3": { "id": "fieldrotator",
		"inputs": [{"name": "t", "type": "real", "source": "globals:wallclock"}],
		"code": "{t*0.1, sin(t*0.41)*0.333, sin(t*0.222)*0.3}"}}

]
