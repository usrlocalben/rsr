[
{"$truecolor": { "id": "root",
	"sRGB": false,
	"program": "IQ",
	"gpu": {"$gpu": {
		"targetSize": "globals:windowSize",
		"layers": ["writerTest"] }}}},

{"$layer": { "id": "writerTest",
	"camera": {"$orthographic": {"l": 0, "r": 16.0, "b": -9, "t": 0}},
	"xcamera": "uiCamera",
	"color": "bkg",
	"gl": [ "writer" ]}},

{"$computedVec3": {
	"id": "bkg",
	"code": "{ 0.2, 0.2, 0.2 }"}},

{"$translate": {"id": "writer",
	"translate": {"$vec3": {"x": 1.0, "y": -1.0, "z": 0}},
	"gl": {"$writer": {
		"material": "mfont",
		"leading": 0.70,
		"width": 8.3,
		"color": {"$vec3": {"x": 0.80, "y": 1.0, "z": 0.5}},
		"text": {"$string": {"data": "There is a box over there! Do you see that box over there?"}},
		"font": "data\\cmu_serif_roman_48.lua"}}}},

{"$material": { "id": "mfont",
	"program": "Text",
	"filter": true,
	"alpha": true,
	"texture0": {"$image": {"file": "data/textures/cmu_serif_roman_48.png"}}}}

]
