[
{"$truecolor": { "id": "root",
	"sRGB": false,
	"program": "IQ",
	"gpu": {"$gpu": {
		"targetSize": "globals:windowSize",
		"layers": ["dinoLayer"] }}}},

{"$layer": { "id": "dinoLayer",
	"camera": {"$orthographic": {"l": 0, "r": 8.0, "b": 0, "t": 4.5}},
	"color": "bkg",
	"gl": [ "dino" ]}},

{"$computedVec3": {
	"id": "bkg",
	"code": "{ 0.2, 0.2, 0.2 }"}},

{"$computedVec3": {"id": "dinoRotation",
	"inputs": [{"name": "t", "type": "real", "source": "globals:wallclock"}],
	"code": "{ 0, 0, sin(t/4.0)*0.5+0.5 }"}},

{"$computedVec3": {"id": "noRotation",
	"inputs": [{"name": "t", "type": "real", "source": "globals:wallclock"}],
	"code": "{ 0, 0, 0.1 }"}},

{"$computedVec3": {"id": "originOffset",
	"inputs": [{"name": "t", "type": "real", "source": "globals:wallclock"}],
	"code": "{ 4+sin(t), 2.25+cos(t), 0 }"}},

{"$translate": {"id": "dino",
	"translate": "originOffset",
	"gl": {"$translate": {
		"rotate": "noRotation",
		"gl": "dinoField1"}}}},

{"$translate": {"id": "dinoField1",
	"translate": {"$vec2": {"x": -12.0, "y": -12.0}},
	"gl": {"$repeat": {
		"many": 24,
		"translate": {"$vec2": {"x": 1.0, "y": 0}},
		"gl": {"$repeat": {
			"many": 24,
			"translate": {"$vec2": {"x": 0.0, "y": 2.0}},
			"gl": {"$translate": {
				"scale": {"$vec2": {"x": 1.0, "y": 1.0}},
				"translate": {"$vec2": {"x": 0.5, "y": 0.5}},
				"gl": "tuckerPair"}}}}}}}},

{"$group": {"id": "tuckerPair", "gl": ["oneDino", "tucker2"]}},

{"$plane": {"id": "tucker1", "material": "tinyTexture"}},
{"$translate": {"id": "tucker2",
	"translate": {"$vec3": {"x": "foo:x", "y": 1.0}},
	"gl": "tucker1"}},

{"$computedVec3": {"id": "foo",
	"inputs": [{"name": "t", "type": "real", "source": "globals:wallclock"}],
	"code": "{ frac(t/2), 0, 0 }"}},
{"$vec3": {"id": "foox", "x": 0.2}},

{"$plane": {"id": "oneDino", "material": "dinoTexture"}},

{"$material": { "id": "dinoTexture",
	"program": "Amy",
	"filter": true,
	"texture0": {"$image": {"file": "data/textures/dino512.png"}}}},

{"$material": { "id": "tinyTexture",
	"program": "Amy",
	"filter": true,
	"texture0": {"$image": {"file": "data/textures/tiny512.png"}}}} ]
